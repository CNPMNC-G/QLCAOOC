@model IEnumerable<QLCAOOC.Models.HOPDONG>
@{
    ViewBag.Title = "HỢP ĐỒNG CỦA BẠN";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <div class="properties-listing spacer">

        <h3><span class="glyphicon glyphicon-dashboard"></span> HỢP ĐỒNG THUÊ CĂN HỘ CỦA BẠN</h3>
        <p></p>
        @foreach (var hd in Model)
        {
            <div class="row">
                <div class="col-lg-12 col-sm-8 ">
                    <div class="row">
                        <div class="col-lg-7">
                            @*<div class="property-images">
                                    <div class="item">
                                        <img src="~/images/canho/@Model.HinhAnh" class="properties" alt="properties" width="500px" height="350px" />
                                    </div>
                                </div>*@

                            <!-- Slider Starts -->
                            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators hidden-xs">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                                    <li data-target="#myCarousel" data-slide-to="2" class=""></li>
                                </ol>
                                <div class="carousel-inner">
                                    <!-- Item 1 -->
                                    <div class="item active">
                                        <img src="~/images/canho/@hd.CANHO.HinhAnh" class="properties" alt="properties" />
                                    </div>
                                    <!-- #Item 1 -->
                                    <!-- Item 2 -->
                                    <div class="item">
                                        <img src="~/images/canho/@hd.MaCanHo-1.jpg" class="properties" alt="properties" />

                                    </div>
                                    <!-- #Item 2 -->
                                    <!-- Item 3 -->
                                    <div class="item">
                                        <img src="~/images/canho/@hd.MaCanHo-2.jpg" class="properties" alt="properties" />
                                    </div>
                                    <!-- #Item 3 -->
                                </div>
                                <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
                                <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
                            </div>
                            <!-- #Slider Ends -->

                        </div>
                        <div class="col-lg-5">
                            <div class="col-lg-12  col-sm-6">
                                <div class="property-info">
                                    <center><h2><span class="glyphicon glyphicon-bookmark"></span> HỢP ĐỒNG SỐ: @hd.MaHopDong</h2></center>
                                    <p>
                                        <center>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                        </center>
                                    </p>
                                    <h4>
                                        <p class="area"><span class="glyphicon glyphicon-home"></span> Căn hộ: @hd.MaCanHo</p>

                                        <p class="area"><span class="glyphicon glyphicon-map-marker"></span> Tầng: @hd.CANHO.MaTang</p>

                                        <p class="area"><span class="glyphicon glyphicon-new-window"></span> Diện tích: @hd.CANHO.GIA.DIENTICH.TenDienTich</p>

                                        <p class="area"><span class="glyphicon glyphicon-refresh"></span> Giá: @string.Format("{0:0,0}", @hd.GiaPhong).Replace(",", ".") VNĐ/tháng</p>

                                        <p class="area"><span class="glyphicon glyphicon-comment"></span> Ghi chú: @hd.CANHO.GhiChu</p>

                                        <p class="area"><span class="glyphicon glyphicon-dashboard"></span> Ngày bắt đầu thuê: @String.Format("{0:dd/MM/yyyy}", @hd.NgayBatDauThue)</p>

                                        <p class="area"><span class="glyphicon glyphicon-dashboard"></span> Ngày hết hạn: @String.Format("{0:dd/MM/yyyy}", @hd.NgayHetHan)</p>

                                        <p class="area"><span class="glyphicon glyphicon-time"></span> Thời gian thuê: @hd.ThoiGianThue tháng</p>

                                        <p class="area"><span class="glyphicon glyphicon-refresh"></span> Đã thanh toán: @hd.DaThanhToan tháng</p>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p><br /><br /></p>
        }
    </div>
</div>
