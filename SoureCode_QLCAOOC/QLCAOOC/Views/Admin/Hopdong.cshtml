@model IEnumerable<QLCAOOC.Models.HOPDONG>
@{
    ViewBag.Title = "QUẢN LÝ HỢP ĐỒNG";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item active"><h3><i class="fa fa-fw fa-list"></i> Quản lý hợp đồng</h3></li>
</ol>
<p>
    <a href="@Url.Action("Themhopdong", "admin")"><button class="btn btn-success">Thêm hợp đồng mới</button></a>
</p>
<table id="table_id"
       class="table table-condensed table-striped table-hover">

    <thead>
        <tr>
            <th>
                Căn hộ:
            </th>
            <th>
                Ngày thuê:
            </th>
            <th>
                Ngày hết hạn:
            </th>
            <th>
                Khách hàng:
            </th>
            <th>
                Giá:
            </th>
            <th>
                Thời gian thuê:
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaCanHo)
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.NgayBatDauThue)
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.NgayHetHan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NHANKHAU.HoTen)
                </td>
                <td>
                    @string.Format("{0:0,0}", @item.GiaPhong).Replace(",", ".") VNĐ/tháng
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiGianThue) tháng
                </td>
                <td>
                    <a href="@Url.Action("chitiethopdong", "admin", new { id = item.MaHopDong })"><button type="button" class="btn btn-default">Chi tiết</button> </a>
                    <a href="@Url.Action("ExportHopDong", "admin", new { id = item.MaHopDong })"><button type="button" class="btn btn-warning">In PDF</button> </a>
                </td>
            </tr>
        }

    </tbody>
</table>
@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').dataTable();
        });
    </script>
    <script src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/9dcbecd42ad/integration/jqueryui/dataTables.jqueryui.js"> </script>

}
@section css
{
    <link rel="stylesheet"
          href="https://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet"
          href="https://cdn.datatables.net/plug-ins/9dcbecd42ad/integration/jqueryui/dataTables.jqueryui.css">

}

