@model QLCAOOC.Models.DIENTICH

@{
    ViewBag.Title = "THÊM DIỆN TÍCH MỚI";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item active"><h3><i class="fa fa-fw fa-plus"></i> Thêm diện tích mới</h3></li>
</ol>

@using (Html.BeginForm("themdientich", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-lg-2">
                <b>Mã diện tích:</b>
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.MaDienTich, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaDienTich, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-2">
                <b>Tên gọi:</b>
            </div>
            <div class="col-md-5">
                @Html.EditorFor(model => model.TenDienTich, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDienTich, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
            </div>
        </div>
    </div>
}