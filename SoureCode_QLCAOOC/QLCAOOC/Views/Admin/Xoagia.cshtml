@model QLCAOOC.Models.GIA

@{
    ViewBag.Title = "XÓA MỨC GIÁ CĂN HỘ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item active"><h3><i class="fa fa-fw fa-remove"></i> Xóa mức giá căn hộ</h3></li>
</ol>
<h3>Bạn có chắc chắn muốn xóa mức giá này?</h3>
<h3><font color="red">@ViewBag.Loi</font></h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Diện tích:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIENTICH.TenDienTich)
        </dd>

        <dt>
            Tầng:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TANG.TenTang)
        </dd>

        <dt>
            Giá:
        </dt>

        <dd>
            @string.Format("{0:0,0}", Model.Gia1).Replace(",", ".") VNĐ/tháng
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
    }
</div>
